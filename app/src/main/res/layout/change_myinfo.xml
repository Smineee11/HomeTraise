<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ChangeMyInfo">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text = "My Information"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize ="30dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text = "ID: "
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize ="15dp"
            android:textStyle="bold"
            />


     <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text = "디비에서 받아온 아이디"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize ="15dp"
        android:textStyle="bold"
        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text = "이름: "
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize ="15dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/name_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#F2F2F2"
            android:layout_margin = "8dp"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_weight="0.5"
            android:textColor = "#000000"/>

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="디비에서 받아온 이름"
            android:gravity="center"
            android:background="@null"
            android:textSize="15sp"
            android:layout_weight="0.5"
            android:visibility="visible"
            android:textColor = "#000000"/>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text = "나이: "
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize ="15dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/age_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#F2F2F2"
            android:layout_margin = "8dp"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_weight="0.5"
            android:textColor = "#000000"/>

        <TextView
            android:id="@+id/age_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="디비에서 받아온 나이"
            android:gravity="center"
            android:background="@null"
            android:textSize="15sp"
            android:layout_weight="0.5"
            android:visibility="visible"
            android:textColor = "#000000"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text = "키: "
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize ="15dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/height_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#F2F2F2"
            android:layout_margin = "8dp"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_weight="0.5"
            android:textColor = "#000000"/>

        <TextView
            android:id="@+id/height_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="디비에서 받아온 키"
            android:gravity="center"
            android:background="@null"
            android:textSize="15sp"
            android:layout_weight="0.5"
            android:visibility="visible"
            android:textColor = "#000000"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text = "몸무게: "
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize ="15dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/weight_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin = "8dp"
            android:background="#F2F2F2"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_weight="0.5"
            android:textColor = "#000000"/>

        <TextView
            android:id="@+id/weight_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="디비에서 받아온 몸무게"
            android:layout_margin = "5dp"
            android:gravity="center"
            android:background="@null"
            android:textSize="15sp"
            android:layout_weight="0.5"
            android:visibility="visible"
            android:textColor = "#000000"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <Button
        android:id = "@+id/button_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="수정하기"
        android:gravity="center"
        android:background="@null"
        android:textSize="15sp"
        android:layout_weight="1"
        android:visibility="visible"
        android:textColor = "#000000"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />


</LinearLayout>
